<div id="page-inner">
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-header">
                Website News @*<small>ITJ CMS</small>*@
            </h1>
            @if (TempData[SZHPCMS.Common.Constants.MESSAGE] != null)
            {
                <div class="success">@TempData[SZHPCMS.Common.Constants.MESSAGE]</div>
            }
        </div>
    </div>
    <!-- /. ROW  -->
    <div class="row" style="display:none">
        <div class="col-md-12">
            <div class="well">
                <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-6">
                        <div class="col-md-6 nopadding">
                            <div class="form-group">
                                <div class='input-group date cal-wrapp' id='datetimepicker6'>
                                    <input type='text' class="form-control calendarpop" placeholder="Start Date" />
                                    <i class="fa fa-calendar-o"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 nopadding">
                            <div class="form-group">
                                <div class='input-group date cal-wrapp' id='datetimepicker7'>
                                    <input type='text' class="form-control calendarpop" placeholder="End Date" />
                                    <i class="fa fa-calendar-o"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-6">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Search">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <select>
                                        <option>Name</option>
                                        <option>CreatedBy</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">

            @using (Html.BeginForm("PerformAction", "News"))
            {
                @Html.AntiForgeryToken()
                  <!-- Advanced Tables -->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @Html.ActionLink("Create New", "CreateUpdate")
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" id="tblData">
                                <thead>
                                    <tr>
                                        <th class="th-checkbox"><input type="checkbox" id="chkBoxHeader" /></th>
                                        <th style="width:23%">@Html.DisplayNameFor(model => model.TitleEnglish)</th>
                                        <th style="width:23%">@Html.DisplayNameFor(model => model.TitleArabic)</th>
                                        @*<th style="width:22%">@Html.DisplayNameFor(model => model.DescriptionEnglish)</th>
                                        <th style="width: 22%">@Html.DisplayNameFor(model => model.DescriptionArabic)</th>*@
                                        <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                                        @*<th class="text-center">@Html.DisplayNameFor(model => model.CategoryName)</th>*@
                                        <th class="text-center">@Html.DisplayNameFor(model => model.RowStatus)</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td><input type="checkbox" name="chkBoxItem" value="@item.Id" /></td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TitleEnglish)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TitleArabic)
                                            </td>
                                            @*<td>
                                                @Html.DisplayFor(modelItem => item.DescriptionEnglish)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DescriptionArabic)
                                            </td>*@
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreatedDate)
                                            </td>
                                            @*<td class="text-center">
                                                @Html.DisplayFor(modelItem => item.CategoryName)
                                            </td>*@
                                            <td style="text-align:center">
                                                @Html.DisplayFor(modelItem => item.RowStatus)
                                            </td>
                                            <td class="text-center">
                                                <a onclick="UpdateMenu(this,'/News/CreateUpdate')" class="btn btn-primary" data-toggle="tooltip" data-original-title="Edit"><i class="fa fa-pencil-square-o"></i></a>
                                                <a class="btn btn-danger" data-toggle="tooltip" data-original-title="Delete" onclick="DeleteMenu(this,'/News/Delete')"><i class="fa fa-trash-o"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="dv-actions">
                            <div class="form-group">
                                <div class="col-md-4 nopadding">
                                    @Html.DropDownList("ddlActions", (List<SelectListItem>)ViewBag.DropDownMenus)
                                </div>
                                <div class="col-md-8">
                                    <input type="submit" value="Go" class="btn btn-default" id="btnAction" />
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            <!--End Advanced Tables -->
            }



        </div>
    </div>

</div>




@section scripts
    {

    @Scripts.Render("~/Content/CMSListing");

}
