@model IEnumerable<SZHPCMS.Models.JobApplicantViewModel>

@{
    ViewBag.Title = "Job Applicants";
}

@section Header{
    <link href="~/Content/assets/js/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
}
<div id="page-inner">
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-header">
                Jobs Applicants
            </h1>
        </div>
    </div>
    <!-- /. ROW  -->
    <div class="row">
        <div class="col-md-12">

            @using (Html.BeginForm("PerformAction", "Career"))
            {
                @Html.AntiForgeryToken()
                  <!-- Advanced Tables -->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @*@Html.ActionLink("Create New", "CreateUpdate")*@
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" id="tblData">
                                <thead>
                                    <tr>
                                        @*<th class="th-checkbox"><input type="checkbox" id="chkBoxHeader" /></th>*@
                                        <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                                        <th>@Html.DisplayNameFor(model => model.LastName)</th>
                                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                                        <th>@Html.DisplayNameFor(model => model.Phone)</th>
                                        <th>@Html.DisplayNameFor(model => model.Experience)</th>
                                        <th>@Html.DisplayNameFor(model => model.Eduction)</th>
                                        <th>@Html.DisplayNameFor(model => model.JobApplied)</th>
                                        <th class="text-center">@Html.DisplayNameFor(model => model.RowStatus)</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            @*<td><input type="hidden" name="chkBoxItem" value="@item.CareerJobAppliedId" /></td>*@
                                            <td>
                                                <input type="hidden" name="chkBoxItem" value="@item.ApplicantID" />
                                                @Html.DisplayFor(modelItem => item.FirstName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LastName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Phone)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Experience)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Eduction)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.JobApplied)
                                            </td>
                                            <td style="text-align:center">
                                                @Html.DisplayFor(modelItem => item.RowStatus)
                                            </td>
                                            <td class="text-center">
                                                <a onclick="UpdateMenu(this, '/Career/ApplicantDetails')" class="btn btn-primary" data-toggle="tooltip" data-original-title="Edit"><i class="fa fa-pencil-square-o"></i></a>
                                                <a class="btn btn-danger" data-toggle="tooltip" data-original-title="Delete" onclick="DeleteMenu(this, '/Career/DeleteApplicant')"><i class="fa fa-trash-o"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        @*<div class="dv-actions nodisplay">
                            <div class="form-group">
                                <div class="col-md-4 nopadding">
                                    @Html.DropDownList("ddlActions", (List<SelectListItem>)ViewBag.DropDownMenus)
                                </div>
                                <div class="col-md-8">
                                    <input type="submit" value="Go" class="btn btn-default" id="btnAction" />
                                </div>

                            </div>
                        </div>*@
                    </div>
                </div>
            <!--End Advanced Tables -->
            }
        </div>
    </div>

</div>

@section scripts{

    @Scripts.Render("~/Content/CMSListing");
}