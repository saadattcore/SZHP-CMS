@model SZHPCMS.Models.ManageUserViewModel

@{
    ViewBag.Title = "Change Password";
}

<div id="page-inner">
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-header">
                Change Password
            </h1>
            @if (TempData["IsSucess"] != null)
            {

                if ((bool)TempData["IsSucess"]  == true)
                {
                    <div class="success">@TempData[Common.Constants.MESSAGE]</div>
                }
                else
                {
                    <div class="error">@TempData[Common.Constants.MESSAGE]</div>
                }

                
            }

        </div>
    </div>
    <!-- /. ROW  -->

    <div class="row">
        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-body">
                    @using (Html.BeginForm("ChangePassword", "User"))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)

                            <div class="form-group">
                                @Html.LabelFor(model => model.OldPassword, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.OldPassword, new { @class = "form-control" , type="password" })
                                    @Html.ValidationMessageFor(model => model.OldPassword)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.NewPassword, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.NewPassword, new { @class = "form-control" , type="password"})
                                    @Html.ValidationMessageFor(model => model.NewPassword)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ConfirmPassword, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control" , type="password" })
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Change Password" class="btn btn-default" />
                                </div>
                            </div>
                        </div>

                        <input type="hidden" name="itemID" value="@ViewBag.MenuIDToUpdate" />
                        <input type="hidden" name="operation" value="@ViewBag.Operation" />
                    }
                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>
</div>