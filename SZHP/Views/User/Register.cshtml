@model SZHPCMS.Models.RegisterViewModel
@{
    ViewBag.Title = "Create Account";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}

<div class="header-flat">
    <div class="wrapper">
        <div class="logo-home"> <a href="#.">CMS</a> </div>
    </div>
    <div class="clearfix"></div>
</div>
<div class="creat-wrapp marginFixLogin">
    <h3>Create Account</h3>
    @using (Html.BeginForm("Register", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) { 
        <div class="box-content-creat">
            <!--<div class="panel-body">
            <div class="alert alert-success">
                <i class="fa fa-check-circle"></i> <strong>Well done!</strong> You successfully read this important alert message.
            </div>
            </div>
            <div class="panel-body">
            <div class="alert alert-danger">
                <i class="fa fa-exclamation-triangle"></i> <strong>Oh snap!</strong> Change a few things up and try submitting again.
            </div>
            </div>-->

            <div class="row-control-creat">
                <div class="control-lft">
                    <label class="label-role" for="firstname">First Name:</label>
                    <div class="field-wrapp">
                        <input type="text" class="form-control custom-control" name="firstname">
                        <i class="fa fa-user"></i>
                    </div>
                </div>
                <div class="control-rght">
                    <label class="label-role" for="lastename">Last Name:</label>
                    <div class="field-wrapp">
                        <input type="text" class="form-control custom-control" name="lastename">
                    </div>
                </div>
            </div>
            <div class="row-control-creat">
                <div class="control-lft">
                    <label class="label-role">Gender:</label>
                    <div class="field-wrapp">
                        <select name="gender">
                            <option>Select</option>
                            <option>Male</option>
                            <option>Female</option>
                        </select>
                    </div>
                </div>
                <div class="control-rght">
                    <label class="label-role" for="dob">Date of birth:</label>
                    <div class="field-wrapp">
                        <fieldset name="dob">
                            <input type="text" class="form-control custom-control control-md" placeholder="DD">
                            <input type="text" class="form-control custom-control control-md" placeholder="MM">
                            <input type="text" class="form-control custom-control control-md" placeholder="YYYY">
                        </fieldset>
                    </div>
                </div>
            </div>
            <div class="row-control-creat">
                <div class="control-lft">
                    <label class="label-role" for="email">Email:</label>
                    <div class="field-wrapp">
                        <input type="email" class="form-control custom-control" name="email">
                        <i class="fa fa-envelope"></i>
                    </div>
                </div>
                <div class="control-rght">
                    <label class="label-role" for="repeatemail">Repeat Email:</label>
                    <div class="field-wrapp">
                        <input type="email" class="form-control custom-control" name="repeatemail">
                    </div>
                </div>
            </div>
            <div class="row-control-creat">
                <div class="control-lft">
                    <label class="label-role" for="password">Password:</label>
                    <div class="field-wrapp">
                        <input type="password" class="form-control custom-control" name="password">
                        <i class="fa fa-lock"></i>
                    </div>
                </div>
                <div class="control-rght">
                    <label class="label-role" for="repeatpassword">Repeat Password:</label>
                    <div class="field-wrapp">
                        <input type="password" class="form-control custom-control" name="repeatpassword">
                    </div>
                </div>
            </div>
            <div class="row-control-creat">
                <div class="control-lft">
                    <label class="label-role" for="number">Contact Number:</label>
                    <div class="field-wrapp">
                        <input type="password" class="form-control custom-control" name="number">
                        <i class="fa fa-phone"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="bottom-box">
            <img src="~/Content/images/creat-bottom.png" />
        </div>
        <div class="btns-row">
            <div class="btn-lft-1">
                <button type="submit" class="btn btn-primary btn-block">SIGNUP</button>
            </div>
            <div class="btn-lft-2">
                <button type="reset" class="btn btn-default btn-block">CLEAR</button>
            </div>
            <div class="btn-rght-1">
                <p>Already have an account?</p>
                <a href="@Url.Action("Login","User")" class="btn btn-default btn-block">LOGIN</a>
            </div>
            <div class="clearfix"></div>
        </div>
    }
</div>
<script type="text/javascript">
    $('form').validate({
        rules: {
            firstname: {
                minlength: 3,
                maxlength: 15,
                required: true
            },
            lastename: {
                minlength: 3,
                maxlength: 15,
                required: true
            },
            dob: {
                minlength: 3,
                maxlength: 15,
                required: true
            },
            email: {
                minlength: 3,
                maxlength: 40,
                required: true
            },
            repeatemail: {
                minlength: 3,
                maxlength: 40,
                required: true
            },
            password: {
                minlength: 3,
                maxlength: 40,
                required: true
            },
            repeatpassword: {
                minlength: 3,
                maxlength: 40,
                required: true
            },
            number: {
                minlength: 3,
                maxlength: 10,
                required: true
            }
        },
        highlight: function (element) {
            $(element).closest('.field-wrapp').addClass('has-error');
        },
        unhighlight: function (element) {
            $(element).closest('.field-wrapp').removeClass('has-error');
        },
        errorElement: 'span',
        errorClass: 'help-block',
        errorPlacement: function (error, element) {
            if (element.parent('.input-group').length) {
                error.insertAfter(element.parent());
            } else {
                error.insertAfter(element);
            }
        }
    });
</script>

