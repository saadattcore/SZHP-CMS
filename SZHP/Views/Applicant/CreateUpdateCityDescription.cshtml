@{
    ViewBag.Title = "Create Update Applicant Content";
}


<div id="page-inner">
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-header">
                @if (ViewBag.Operation != null)
                {
                    <span>@ViewBag.Operation&nbsp;FAQ</span>
                }
            </h1>
        </div>
    </div>
    <!-- /. ROW  -->

    <div class="row">

        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Html.ActionLink("Back to List", "Index")
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("CreateUpdateCityDescription", "Applicant", FormMethod.Post))
                    {

                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <div id="divSubCatContainer">

                                <div class="form-group">
                                    <label class="control-label col-md-2">Applicant Category</label>
                                    <div class="col-md-6">
                                        @Html.DropDownList("ddlCategory", (IEnumerable<SelectListItem>)ViewBag.DropDown)
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">City</label>
                                    <div class="col-md-6">
                                        @Html.DropDownList("ddlCity", (IEnumerable<SelectListItem>)ViewBag.CityDropDown)
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Description Ar</label>
                                    <div class="col-md-6">
                                        <textarea class="form-control" name="descriptionAr" id="editor_ar" ></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">Description En</label>
                                    <div class="col-md-6">
                                        <textarea class="form-control" name="descriptionEn" id="editor_en"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="@ViewBag.Operation" class="btn btn-success" />
                            </div>

                        </div>

                        <input type="hidden" name="itemID" value="@ViewBag.ItemID" />
                        <input type="hidden" name="operation" value="@ViewBag.Operation" />
                    }
                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>
</div>
@section scripts
    {

    <script type="text/javascript">

    </script>

    <script src="//cdn.ckeditor.com/4.5.7/full/ckeditor.js"></script>
    @*<script type="text/javascript"> CKEDITOR.replace('editor_en'); </script>
    <script type="text/javascript"> CKEDITOR.replace('editor_ar'); </script>*@

}