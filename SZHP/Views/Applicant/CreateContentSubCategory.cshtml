@{
    ViewBag.Title = "Create Update Applicant Content";
}


<div id="page-inner">
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-header">
                @if (ViewBag.Operation != null)
                {
                    <span>@ViewBag.Operation&nbsp;FAQ</span>
                }
            </h1>
        </div>
    </div>
    <!-- /. ROW  -->

    <div class="row">

        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Html.ActionLink("Back to List", "Index")
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("CreateContentSubCategory", "Applicant", FormMethod.Post))
                    {

                        @Html.AntiForgeryToken()

                        <input id="hfCounter" value="1" type="hidden" name="hfCounter" />
                        <button class="btn" style="background:transparent" onclick="AddMoreSubCategory(); return false"><i class="fa fa-plus"></i>&nbsp;&nbsp;Add More</button>
                        <br />
                        <br />
                        <div class="form-horizontal">
                            <div id="divSubCatContainer">

                                <div class="form-group">
                                    <label class="control-label col-md-2">Applicant Category</label>
                                    <div class="col-md-4">
                                        @Html.DropDownList("ddlCategory", (IEnumerable<SelectListItem>)ViewBag.DropDown)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">Title Ar</label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" name="ContentSubCategoryNameAr_1" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">Title En</label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" name="ContentSubCategoryNameEn_1" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">Header Text Ar</label>
                                    <div class="col-md-4">
                                        <textarea class="form-control" name="ContentSubCategoryDescAr_1"></textarea>

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">Header Text En</label>
                                    <div class="col-md-4">
                                        <textarea class="form-control" name="ContentSubCategoryDescEn_1"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="@ViewBag.Operation" class="btn btn-success" />
                            </div>

                        </div>

                        <input type="hidden" name="itemID" value="@ViewBag.ItemID" />
                        <input type="hidden" name="operation" value="@ViewBag.Operation" />
                    }
                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>
</div>
@section scripts
    {

    <script type="text/javascript">
        function AddMoreSubCategory() {



            var nextID = parseInt($('#hfCounter').val());
            nextID = nextID + 1;

            $('#divSubCatContainer').append('<div class="form-group"><label class="control-label col-md-2">Name Ar</label><div class="col-md-4"><input type="text" class="form-control" name=' + '"' + 'ContentSubCategoryNameAr_' + nextID + '"' + '/></div></div>');
            $('#divSubCatContainer').append('<div class="form-group"><label class="control-label col-md-2">Name En</label><div class="col-md-4"><input type="text" class="form-control" name=' + '"' + 'ContentSubCategoryNameEn_' + nextID + '"' + '" /></div></div>');


            $('#divSubCatContainer').append('<div class="form-group"><label class="control-label col-md-2">Header Text Ar</label><div class="col-md-4"><textarea class="form-control" name=' + '"' + 'ContentSubCategoryDescAr_' + nextID + '"' + '></textarea></div></div>');
            $('#divSubCatContainer').append('<div class="form-group"><label class="control-label col-md-2">Header Text En</label><div class="col-md-4"><textarea class="form-control" name=' + '"' + 'ContentSubCategoryDescEn_' + nextID + '"' + '></textarea></div></div>');



            //$('#divSubCatContainer').append('<div class="form-group"><label class="control-label col-md-2">Name Ar</label><div class="col-md-4"><input type="text" class="form-control" name="SubCategoryNameAr"/></div></div>');
            //$('#divSubCatContainer').append('<div class="form-group"><label class="control-label col-md-2">Name En</label><div class="col-md-4"><input type="text" class="form-control" name="SubCategoryNameEn"/></div></div>');

            parseInt($('#hfCounter').val(nextID));

        }
    </script>

    <script src="//cdn.ckeditor.com/4.5.7/full/ckeditor.js"></script>
    <script type="text/javascript"> CKEDITOR.replace('editor_en'); </script>
    <script type="text/javascript"> CKEDITOR.replace('editor_ar'); </script>

}